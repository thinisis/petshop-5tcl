</head>
<style>
    .furits-header .menu-style-2 nav > ul > li > a {
        color: #ffffff;
    }

    .furits-login li a {
        color: #ffffff;
        text-transform: uppercase;
    }

    .full-height {
        min-height: 75vh;
    }
    .btn {
        font-size: .875rem;
        padding: 0.65rem 1.25rem;
        line-height: 1.25;
        height: auto;
        border-color: #edf2f9;
    }
    a:not([href]):not([tabindex]) {
        color: white;
        text-decoration: none;
    }
    </style>
<body>
    <header>
        <div class="header-bottom wrapper-padding-2 res-header-sm sticker header-sticky-3 furits-header">
            <div class="container-fluid">
                <div class="header-bottom-wrapper">
                    <div class="logo-2 ptb-35">
                        <a href="~/">
                            <img src="~/Content/img/logo/logo-f.png" alt="" width="100">
                        </a>
                    </div>
                    <div class="menu-style-2 handicraft-menu menu-hover">
                        <nav>
                            <ul>
                                <li>
                                    <a href="~/">Trang chủ</a>
                                </li>
                                <li>
                                    <a href="#">Phụ kiện</a>
                                    <div class="category-menu-dropdown shop-menu">
                                        <div class="category-dropdown-style category-common2 mb-30">
                                            <h4 class="categories-subtitle">Phụ kiện, đồ dùng cho chó</h4>
                                            <ul>
                                                <li><a href="#">Thức ăn cho chó</a></li>
                                                <li><a href="#">Vật dụng ăn uống cho chó</a></li>
                                                <li><a href="#">Vòng cổ, dây dắt, rọ mõm</a></li>
                                                <li><a href="#"> Quần áo cho chó</a></li>
                                                <li><a href="#">Chuồng, giường, nhà, túi</a></li>
                                                <li><a href="#">Đồ chơi, phụ kiện huấn luyện</a></li>
                                            </ul>
                                        </div>
                                        <div class="category-dropdown-style category-common2 mb-30">
                                            <h4 class="categories-subtitle">Phụ kiện, đồ dùng cho mèo</h4>
                                            <ul>
                                                <li><a href="#">Thức ăn cho mèo</a></li>
                                                <li><a href="#">Cát vệ sinh cho mè</a></li>
                                                <li><a href="#">Nhà cho mèo</a></li>
                                                <li><a href="#">Thuốc thú y mèo</a></li>
                                                <li><a href="#">Phụ kiện cho mèo</a></li>
                                                <li><a href="#">Chăm sóc mèo</a></li>
                                                <li><a href="#">Đồ dùng cho mèo</a></li>
                                            </ul>
                                        </div>
                                        <div class="mega-banner-img">
                                            <a href="single-product.html">
                                                <img src="~/Content/img/banner/850x162.jpg" alt="">
                                            </a>
                                        </div>
                                    </div>
                                </li>
                                @if (Session["Admin"] != null)
                                {
                                    <li>
                                        <a href="/Admin">Admin Panel</a>
                                    </li>
                                }
                            </ul>
                        </nav>
                    </div>
                    <div class="furits-login-cart">
                        <div class="furits-login">
                            <ul>
                                @if (Session["LoginSession"] == null)
                                {
                                    <li>
                                        <a href="/Account/Login">Đăng nhập</a>
                                    </li>
                                    <li>
                                        <a href="/Account/Reg">Đăng ký</a>
                                    </li>
                                }
                                @if (Session["LoginSession"] != null)
                                {
                                    {
                                        <li>
                                            <a><b>Xin chào</b> @Session["LoginSession"].ToString()</a>
                                        </li>
                                        <li>
                                            <a href="/Account/Logout">Đăng xuất</a>
                                        </li>
                                    }
                                }


                            </ul>
                        </div>
                        @if (Session["LoginSession"] != null && Session["Cart"] != null)
                        {
                            <div class="header-cart-4 furits-cart">
                                <a class="icon-cart" href="#">
                                    <i class="pe-7s-shopbag"></i>
                                    <span class="handicraft-count">@Session["TongSanPham"].ToString()</span>
                                </a>
                                <ul class="cart-dropdown">

                                    @foreach (var item in Session["Cart"] as IEnumerable<Pet_5TCL.Models.Cart>)
                                    {
                                        <li class="single-product-cart">
                                            <div class="cart-img">
                                                <a href="#"><img src="/@item.image" alt=""></a>
                                            </div>
                                            <div class="cart-title">
                                                <h5><a href="@Url.Action("Details", "Home",new { @id = item.masp })"> @item.tensp</a></h5>
                                                <span>@String.Format("{0:0,0}", item.dThanhtien) VND</span>
                                            </div>
                                            <div class="cart-delete">
                                                <a href="#"><i class="ti-trash"></i></a>
                                            </div>
                                        </li>
                                    }

                                    <li class="cart-btn-wrapper">
                                        <a class="cart-btn btn-hover" href="#">Xem giỏ hàng</a>
                                        <a class="cart-btn btn-hover" href="#">Thanh toán</a>
                                    </li>
                                </ul>
                            </div>
                        }
                    </div>
                </div>
                <div class="row">
                    <div class="mobile-menu-area handicraft-menu d-md-block col-md-12 col-lg-12 col-12 d-lg-none d-xl-none">
                        <div class="mobile-menu">
                            <nav id="mobile-menu-active">
                                <ul class="menu-overflow">
                                    <li>
                                        <a href="/Index">Trang chủ</a>
                                    </li>
                                    <li>
                                        <a href="#">Phụ kiện, đồ dùng cho chó</a>
                                        <ul>
                                            <li><a href="#">Thức ăn cho chó</a></li>
                                            <li><a href="#">Vật dụng ăn uống cho chó</a></li>
                                            <li><a href="#">Vòng cổ, dây dắt, rọ mõm</a></li>
                                            <li><a href="#"> Quần áo cho chó</a></li>
                                            <li><a href="#">Chuồng, giường, nhà, túi</a></li>
                                            <li><a href="#">Đồ chơi, phụ kiện huấn luyện</a></li>
                                        </ul>
                                    </li>
                                    <li>
                                        <a href="#">Phụ kiện, đồ dùng cho mèo</a>
                                        <ul>
                                            <li><a href="#">Thức ăn cho mèo</a></li>
                                            <li><a href="#">Cát vệ sinh cho mè</a></li>
                                            <li><a href="#">Nhà cho mèo</a></li>
                                            <li><a href="#">Thuốc thú y mèo</a></li>
                                            <li><a href="#">Phụ kiện cho mèo</a></li>
                                            <li><a href="#">Chăm sóc mèo</a></li>
                                            <li><a href="#">Đồ dùng cho mèo</a></li>
                                        </ul>
                                    </li>

                                </ul>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </header>
    <div class="breadcrumb-area pt-205 pb-210" style="background-image: url(/Content/img/bg/1903x500-regfix.jpg)">
        <div class="container">
            <div class="breadcrumb-content text-center">
                <h2>Admin Panel</h2>
                <ul>
                    <li><a>Admin Panel</a></li>
                    <li> @ViewData["ATitle"]</li>
                </ul>
            </div>
        </div>
    </div>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand" href="#">Admin Panel</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <a class="nav-link" href="/Admin/Index">Tổng quan <span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item active">
                    <a class="nav-link" href="/Admin/ListProduct">Quản lý sản phẩm</a>
                </li>
                <li class="nav-item active">
                    <a class="nav-link" href="/Admin/ListCategory">Quản lý loại sản phẩm</a>
                </li>
                <li class="nav-item active">
                    <a class="nav-link" href="/Admin/AccountManager">Quản lý người dùng</a>
                </li>
                <li class="nav-item active">
                    <a class="nav-link" href="/Admin/ListOrder">Quản lý đơn hàng</a>
                </li>
            </ul>
        </div>
    </nav>
    @RenderBody()
