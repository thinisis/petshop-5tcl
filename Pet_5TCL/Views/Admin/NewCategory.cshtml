@model Pet_5TCL.Models.products_type

@{
    ViewBag.Title = "NewCategory";
    Layout = "~/Views/Shared/_ALayout.cshtml";
}
@using (Html.BeginForm("NewCategory", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="main-content">
        <form>
            <div class="page-header no-gutters has-tab">
                <div class="d-md-flex m-b-15 align-items-center justify-content-between">
                    <div class="media align-items-center m-b-15">
                        <div class="m-l-15">
                            <h4 class="m-b-0">Thêm loại sản phẩm mới</h4>
                        </div>
                    </div>
                </div>
                <ul class="nav nav-tabs">
                    <li class="nav-item">
                        <a class="nav-link active" data-toggle="tab" href="#product-edit-basic">Thông tin chi tiết</a>
                    </li>
                </ul>
            </div>
            <div class="tab-content m-t-15">
                <div class="tab-pane fade show active" id="product-edit-basic">
                    <div class="card">
                        <div class="card-body">
                            <div class="form-group">
                                <label class="font-weight-semibold" for="username">Mã loại</label>
                                @Html.EditorFor(model => model.maloai, new { htmlAttributes = new { @class = "form-control", @type = "text" } })
                                @Html.ValidationMessageFor(model => model.maloai, "", new { @class = "error" })
                            </div>
                            <div class="form-group">
                                <label class="font-weight-semibold" for="username">Tên loại</label>
                                @Html.EditorFor(model => model.tenloai, new { htmlAttributes = new { @class = "form-control", @type = "text" } })
                                @Html.ValidationMessageFor(model => model.tenloai, "", new { @class = "error" })
                            </div>
                        </div>
                    </div>
                    <div class="m-b-15">
                        <button type="submit" class="btn btn-primary">
                            <i class="anticon anticon-save"></i>
                            <span>Lưu</span>
                        </button>
                        <a href="./" class="btn btn-default">
                            <i class="anticon anticon-arrow-left"></i>
                            <span>Quay lại</span>
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
}