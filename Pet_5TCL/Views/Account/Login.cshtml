<!-- header end -->
<style>
    .furits-header .menu-style-2 nav > ul > li > a {
        color: #ffffff;
    }

    .furits-login li a {
        color: #ffffff;
        text-transform: uppercase;
    }

    .full-height {
        min-height: 75vh;
    }
    .btn {
        font-size: .875rem;
        padding: 0.65rem 1.25rem;
        line-height: 1.25;
        height: auto;
        border-color: #edf2f9;
    }
</style>
<div class="breadcrumb-area pt-205 pb-210" style="background-image: url(../Content/img/bg/1903x500-regfix.jpg)">
    <div class="container">
        <div class="breadcrumb-content text-center">
            <h2>Đăng nhập</h2>
            <ul>
                <li><a>Tài khoản</a></li>
                <li> Đăng nhập </li>
            </ul>
        </div>
    </div>
</div>
<!-- login-area start -->
<div class="login">
    <div class="container-fluid p-h-0 p-v-20 bg full-height d-flex" style="background-image: url('../Content/img/others/login-3.png')">
        <div class="d-flex flex-column justify-content-between w-100">
            <div class="container d-flex h-100">
                <div class="row align-items-center w-100">
                    <div class="col-md-7 col-lg-5 m-h-auto">
                        <div class="d-flex flex-column justify-content-between w-100">
                            <form action="Login" method="post">
                                <div class="form-group">
                                    @if (ViewBag.msgFail != null)
                                    {
                                        <div id="msgAlert" class="alert alert-danger" role="alert">
                                            Lỗi! - @ViewBag.msgFail
                                        </div>
                                    }
                                    @if (ViewBag.msgSuccess != null)
                                    {
                                        <div id="msgAlert" class="alert alert-success" role="alert">
                                            Thành công! - @ViewBag.msgSuccess
                                        </div>
                                    }
                                    <label class="font-weight-semibold" for="username">Tài khoản:</label>
                                    <div class="input-affix">
                                        <i class="prefix-icon anticon anticon-user"></i>
                                        <input type="text" class="form-control" id="username" name="username" placeholder="Tên tài khoản" required>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="font-weight-semibold" for="password">Mật khẩu:</label>
                                    <a class="float-right font-size-13 text-muted" href="">Quên mật khẩu?</a>
                                    <div class="input-affix m-b-10">
                                        <i class="prefix-icon anticon anticon-lock"></i>
                                        <input type="password" class="form-control" id="password" name="password" placeholder="Nhập vào mật khẩu" required>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="d-flex align-items-center justify-content-between">
                                        <span class="font-size-13 text-muted">
                                            Không có tài khoản?
                                            <a class="small" href="/Account/Reg"> Đăng ký</a>
                                        </span>
                                        <div class="button-box">
                                            <button method="post" type="submit" value="Login" class="btn btn-primary">Đăng nhập</button>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- login-area end -->
@section Script{
    <script>
        setTimeout(function () {
            $('#msgAlert').fadeOut('slow');
        }, 2000)
    </script>
}