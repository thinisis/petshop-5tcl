@model IEnumerable<Pet_5TCL.Models.Cart>

@{
    ViewBag.Title = "Giỏ hàng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- header end -->
<div class="breadcrumb-area pt-205 pb-210" style="background-image: url(/Content/img/bg/1903x500-regfix.jpg)">
    <div class="container">
        <div class="breadcrumb-content text-center">
            <h2>Giỏ hàng</h2>
            <ul>
                <li><a href="#">Giỏ hàng</a></li>
                <li> Chi tiết giỏ hàng</li>
            </ul>
        </div>
    </div>
</div>
<!-- shopping-cart-area start -->
<div class="cart-main-area pt-95 pb-100">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <h1 class="cart-heading">Giỏ hàng</h1>
                    <div class="table-content table-responsive">
                        <table>
                            <thead>
                                <tr>

                                    <th>Hình ảnh</th>
                                    <th>Tên sản phẩm</th>
                                    <th>Đơn giá</th>
                                    <th>Số lượng</th>
                                    <th>Thành tiền</th>
                                    <th>Xoá</th>
                                    <th>Cập nhật</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        @using (Html.BeginForm("UpdateCart", "Cart", new { @id = item.masp }))
                                        {
                                            <td class="product-thumbnail">
                                                <a href="#"><img src="/@item.image" alt="" height="150"></a>
                                            </td>
                                            <td class="product-name"><a href="#">@item.tensp</a></td>
                                            <td class="product-price-cart"><span class="amount">@String.Format("{0:0,0}", item.giaban) VND</span></td>
                                            <td>
                                                <input value="@item.iSoluong" min="1" max="@item.total" name="soluong" type="number">
                                            </td>
                                            <td class="product-subtotal">@String.Format("{0:0,0}", item.dThanhtien) VND</td>
                                            <td>@Html.ActionLink("Xoá", "RemoveItem", new { @id = item.masp }) </td>
                                            <td><button type="submit" class="btn btn-success"><i class="pe-7s-refresh"></i></button></td>
                                        }
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <div class="row">
                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                            <div class="coupon2">
                                <a class="button" href="EmptyCart"> Xoá giỏ hàng</a>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-5 ml-auto">
                            <div class="cart-page-total">
                                <h2>Chi tiết đơn hàng</h2>
                                <ul>
                                    <li>Tổng tiền<span>@String.Format("{0:0,0}", ViewBag.TongTien) VND</span></li>
                                </ul>
                                <a href="/Cart/Checkout">Tới thanh toán</a>
                            </div>
                        </div>
                    </div>
            </div>
        </div>
    </div>
</div>
